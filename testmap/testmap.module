/**
 * Updates the selected location in the table = 'osmap'. 
 */
function testmap_form_update($form, &$form_state){

    $form = array(
			'#prefix' => '<div id="updateform">',
			'#suffix' => '</div>',  
		);
        $typeOptions = array("university", "business", "office");
		$mapValues = map_select_data();
        if (empty($mapValues))
		{
		  $form['no_values'] = array(
		    '#value' => t('No locations in the table'),
		  );
		  return $form;
		}
		
		foreach($mapValues as $mapValue) {
		  $options[$mapValue->id] = t("ID:@id:  ,NAME: @name   ,ADDRESS: @address    ,TYPE: @type ",
		                            array('@id' => $mapValue->id, '@name' =>$mapValue->name,
									      '@address' =>$mapValue->address,'@type' =>$mapValue->type));
		  $mapEntries[$mapValue->id] = $mapValue;
		}
		$default_location = !empty($form_state['values']['id']) ?
                $mapEntries[$form_state['values']['id']] : $mapValues[0];
				
		
		$form_state['mapValues'] = $mapEntries;
		$form['id'] = array(
		  '#type' =>'select',
		  '#options' => $options,
		  '#title' =>t('Choose a location to update'),
		  '#default_value' => $default_location->id,
	 	  '#ajax' => array(
		       'wrapper' => 'updateform',
			   'callback' => 'testmap_form_update_callback',	  
	   ),	
		);
		$form['name'] = array(
		  '#type' => 'textfield',
		  '#title' => t('Updated location name'),
		  '#size' => 40,
		  '#default_value' => $default_location->name,
		);
		$form['address'] = array(
		  '#type' => 'textfield',
		  '#title' => t('Updated location address'),
		  '#size' => 40,
		  '#default_value' => $default_location->address,
		);
		$form['type'] = array(
		  '#type' => 'select',
		  '#options' => $typeOptions,
		  '#title' => t('Updated location type'),
		  '#default_value' => $typeOptions[0],	
 		);
		
		$form['submit'] = array (
		  '#type' => 'submit',
		  '#value' => t('Update'),
		);
		
		return $form;	 
}

function testmap_form_update_callback($form, $form_state){
  $mapValue = $form_state['entries'][$form_state['values']['id']];
  
  foreach(array('name', 'address', 'type') as $item) {
     $form[$item]['#value'] = $mapValue->$item;
  }
  return $form;
} 

function testmap_form_update_submit($form, &$form_state){
    $mapValue = array (
	    'id' => $form_state['values']['id'],
        'name' => $form_state['values']['name'],
		'address' => $form_state['values']['address'],
		'type' => $form['type']['#options'][$form_state['values']['type']],
        );
    $count = map_update_data($mapValue);
	drupal_set_message(t("Updated location @mapValue (@count row updated)", 
	                     array('@count' => $count, '@mapValue' =>print_r($mapValue['name'], TRUE))));
}

